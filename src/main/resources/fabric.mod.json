{
	"schemaVersion": 1,
	"id": "hattened",
	"version": "${version}",
	"name": "Hattened",
	"description": "Adds a magic hat! For Modfest 2025: Toybox.",
	"authors": [
		"miyucomics"
	],
	"contact": {
		"homepage": "https://github.com/miyucomics/hattened",
		"sources": "https://github.com/miyucomics/hattened"
	},
	"license": "MIT",
	"icon": "assets/hattened/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "miyucomics.hattened.HattenedMain",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "miyucomics.hattened.HattenedClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"hattened.mixins.json",
		{
			"config": "hattened.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.21.8",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	}
}
